{
  "name": "ts-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
	"dev": "clear && concurrently \"npx vite --config client/vite.config.ts --force --host --mode dev\" \"nodemon --watch server --ext ts --exec \\\"npm run server:start\\\"\"",
	"client:build": "npm run client:lint && npx vite build --config client/vite.config.ts --mode prod",
	"client:lint": "npx eslint client --fix && tsc --noEmit -p client/tsconfig.client.json",
    "server:start": "npx tsx --tsconfig ./server/tsconfig.server.json server/modules/Main.ts",
    "server:start:demon": "npx pm2 start 'npm run server:start' --name server",
    "server:lint": "npx eslint server --fix && tsc --noEmit -p server/tsconfig.server.json",
    "preview-db": "open -a 'DB Browser for SQLite' server/sqlite3.db"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^5.1.0",
    "preact": "^10.27.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-legacy": "^7.1.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-de-morgan": "^1.3.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "~5.7.2",
    "vite": "^7.0.6",
    "vite-plugin-checker": "^0.10.2"
  }
}
