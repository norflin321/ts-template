{
  "name": "webstarter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "clear && concurrently 'npm run client:dev' 'npm run server:dev'",
    "client:dev": "npx vite --config client/vite.config.ts --force --host",
    "client:build": "npm run client:lint && npx vite build --config client/vite.config.ts",
    "server:dev": "nodemon --quiet --watch src --ext ts --exec 'npm run server:start'",
    "server:start": "npx tsx --tsconfig ./src/tsconfig.server.json src/main.ts",
    "server:start:demon": "npx pm2 start 'npm run server:start' --name server && npx pm2 logs server",
    "client:lint": "npx eslint client/src/ --fix && tsc --noEmit -p client/tsconfig.client.json",
    "server:lint": "npx eslint src/ --fix && tsc --noEmit -p src/tsconfig.server.json",
    "preview-db": "open -a 'DB Browser for SQLite' main.db"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "express": "^5.1.0",
    "preact": "^10.26.9"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.32",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-de-morgan": "^1.3.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "~5.7.2",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3"
  }
}
